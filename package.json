{
  "name": "mai_ds_2",
  "version": "1.0.0",
  "description": "A modern, responsive website for the Museum of Artificial Intelligence featuring interactive slideshows, smooth animations, and a professional design.",
  "main": "src/site/journal.js",
  "scripts": {
    "build": "npm run build:static && npm run build:css",
    "build:static": "node tools/build-static.js",
    "build:css": "postcss src/tailwind.css -o public/assets/css/tailwind.css --env production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "audit": "lighthouse http://localhost:3000 --output=json --output-path=reports/lighthouse.json",
    "optimize": "node tools/optimize-images.js src/site/images/slide",
    "generate:slides": "node tools/generate-slides-manifest.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.4.4",
    "lighthouse": "^12.0.0",
    "sharp": "^0.33.4"
  }
}
